@model IEnumerable<FPTBookStore.Models.Orderdetail>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Home.cshtml";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Home</a>
    </li>
    <li class="breadcrumb-item active">Order History</li>
</ol>
<!---->
<!-- banner -->
<section class="ab-info-main py-md-5 py-4">
    <div class="d-flex justify-content-center mt-3 mb-3">
        <h3>Order History</h3>
    </div>
    <div class="container mb-3 mt-3">
        <div class="d-flex justify-content-left mt-3 mb-3">
            <h5>OrderDetails</h5>
        </div>
        <table class="table">
            <thead class="table-dark">
            <th>OrderDetailsID</th>
            <th>BookName</th>
            <th>Image</th>
            <th>Quality</th>
            <th>Price</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderdetailsID</td>
                        <td>@item.Book.BookName</td>
                        <td>
                            <img style="width: 80px" src="~/Content/images/@item.Book.Img" class="img-thumbnail" alt="...">
                        </td>
                        <td>@item.Quality</td>
                        <td>@item.Price</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>

