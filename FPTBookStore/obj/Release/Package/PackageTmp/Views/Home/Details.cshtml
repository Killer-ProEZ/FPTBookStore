@model FPTBookStore.Models.Book
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Home</a>
    </li>
    <li class="breadcrumb-item active">Details</li>
</ol>
<!---->
<!-- banner -->
<section class="ab-info-main py-md-5 py-4">
    <div class="container py-md-3">
        <!-- top Products -->
        <div class="row">
            <!-- product left -->
            <!-- //product left -->
            <!-- product right -->
            <div class="left-ads-display col-lg-12">
                <div class="row mb-3">
                    <div class="img-center desc1-left col-md-6 align="center"">
                        <img src="~/Content/images/@Model.Img" class="rounded mx-auto d-block pt-1 pb-1" alt="">
                    </div>
                    <div class="desc1-right col-md-6 pl-lg-4">
                        <h2>Name</h2>
                        <div class="row">
                            <div class="col col-sm-5">
                                <p class="fst-italic">
                                    Author:
                                    <Span class="text-secondary fw-lighter"> @ViewBag.Author</Span>
                                </p>
                            </div>
                            <div class="col col-sm-7">
                                <p class="fst-italic">
                                    Category:
                                    <Span class="text-secondary fw-lighter"> @ViewBag.Category</Span>
                                </p>
                            </div>
                        </div>
                        <h5 class="text-danger"> <span class="fst-italic text-dark">Price: </span> $ @Model.Price @Html.ActionLink("Back to home","Index","Home")</h5>
                        <form action="" class="mt-3">
                            <div class="row">
                                @using (Html.BeginForm("AddCart","Cart"))
                                {
                                    <div class="col col-sm-6">
                                         @Html.TextBox("productid", "", new { @class = "form-control", @type = "hidden",@value=Model.BookID}) 
                                         @Html.TextBox("quality", "", new { @class = "form-control", @type = "number" }) 
                                    </div>
                                    <div class="col col-sm-6">
                                        @*<button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add to cart</button>*@
                                        <input type="submit" value="Add to cart" class="btn btn-primary"/>
                                    </div>
                                }
                            </div>
                        </form>
                        <div class="available mt-3">
                            <h5 class="fst-italic text-dark">Description</h5>
                            <p>@Model.Description</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

