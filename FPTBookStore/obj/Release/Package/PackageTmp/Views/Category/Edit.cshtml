@model FPTBookStore.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 side-color">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Category</h4>
            <hr />
            <div class="d-flex justify-content-end">
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-danger" })
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoryID)

            <div class="form-group mt-2">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 d-flex justify-content-center mt-3 mb-3">
                    <input type="submit" value="Edit" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</main>

