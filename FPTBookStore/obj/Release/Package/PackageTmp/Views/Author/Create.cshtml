@model FPTBookStore.Models.Author

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 side-color">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Author</h4>
            <hr />
            <div class="d-flex justify-content-end">
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-danger" })
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.AuthorName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
                    <p class="text-danger">@ViewBag.Error</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 d-flex justify-content-center mt-3 mb-3">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

