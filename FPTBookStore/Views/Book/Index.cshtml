@model IEnumerable<FPTBookStore.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 side-color">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">

        </div>
    </div>

    <h2>Books</h2>
    <div class="mt-2">
        <div class="d-flex justify-content-between mb-2">
            <a class="btn btn-primary" href="@Url.Action("Create")"><i class="fa-solid fa-plus"></i>  Add Books</a>
            @using (Html.BeginForm())
            {
                <div class="d-flex justify-content-between">
                    @Html.TextBox("searchstring","",new { @class= "form-control mr-2", type = "text" })
                    <input type="submit" value="Search" class="btn btn-primary">
                </div>
            }
        </div>
    </div>
    <div class="table-responsive mt-2">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">BookId</th>
                    <th scope="col">BookName</th>
                    <th scope="col">Image</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Date Add</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.BookID</td>
                        <td>@book.BookName</td>
                        <td>
                            <img style="width: 80px" src="~/Content/images/@book.Img" class="rounded d-block" alt="...">
                        </td>
                        <td>$ @book.Price</td>
                        <td>@book.Stock</td>
                        <td>@book.Date_add</td>
                        <td><a href="@Url.Action("Edit","Book",new { id=book.BookID})"><i class="fa-solid fa-pen-to-square"></i>Edit</a></td>
                        <td><a onclick="return confirm('Are you sure ?')" href="@Url.Action("Delete","Book",new { id=book.BookID})"><i class="fa-solid fa-trash-can"></i>Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

