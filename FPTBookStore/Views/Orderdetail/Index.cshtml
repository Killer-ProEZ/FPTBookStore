@model IEnumerable<FPTBookStore.Models.Orderdetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 side-color">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">

        </div>
    </div>

    <h2>Orderdeatils</h2>
    <div class="table-responsive mt-2">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">OrderdetailID</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quality</th>
                    <th scope="col">OrderID</th>
                    <th scope="col">BookID</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderdetail in Model)
                {
                    <tr>
                        <td>@orderdetail.OrderdetailsID</td>
                        <td>@orderdetail.Price</td>
                        <td>@orderdetail.Quality</td>
                        <td>@orderdetail.OrderID</td>
                        <td>@orderdetail.BookID</td>
                        <td><a onclick="return confirm('Are you sure ?')" href="@Url.Action("Delete","Orderdetail",new { id=orderdetail.OrderdetailsID})"><i class="fa-solid fa-trash-can"></i>Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

